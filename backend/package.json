{
  "name": "sqli-demo-platform",
  "version": "3.0.0",
  "description": "Enterprise-grade SQL Injection demonstration platform for security education",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:security": "bash scripts/test-attacks.sh",
    "setup": "bash scripts/setup.sh",
    "migrate": "node database/migrate.js",
    "seed": "node database/seed.js",
    "build": "npm run test && npm run lint",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop sqli-demo",
    "pm2:logs": "pm2 logs sqli-demo",
    "backup:db": "bash scripts/backup.sh",
    "docs": "jsdoc -c jsdoc.json"
  },
  "keywords": [
    "security",
    "sql-injection",
    "xss",
    "education",
    "owasp",
    "vulnerability",
    "penetration-testing",
    "cybersecurity",
    "web-security",
    "ethical-hacking"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/sqli-demo-platform"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "dotenv": "^16.3.1",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "express-session": "^1.17.3",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "cookie-parser": "^1.4.6",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "uuid": "^9.0.1",
    "nanoid": "^5.0.4",
    "crypto-js": "^4.2.0",
    "joi": "^17.11.0",
    "zod": "^3.22.4",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "redis": "^4.6.11",
    "ioredis": "^5.3.2",
    "bull": "^4.12.0",
    "node-cache": "^5.1.2",
    "axios": "^1.6.2",
    "nodemailer": "^6.9.7",
    "handlebars": "^4.7.8",
    "pdf-lib": "^1.17.1",
    "exceljs": "^4.4.0",
    "xml2js": "^0.6.2",
    "cheerio": "^1.0.0-rc.12",
    "sanitize-html": "^2.11.0",
    "xss": "^1.0.14",
    "validator": "^13.11.0",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "passport-jwt": "^4.0.1",
    "passport-google-oauth20": "^2.0.0",
    "socket.io": "^4.6.0",
    "ws": "^8.16.0",
    "graphql": "^16.8.1",
    "express-graphql": "^0.12.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "express-openapi-validator": "^5.1.2",
    "rate-limit-redis": "^4.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "hpp": "^0.2.3",
    "express-slow-down": "^2.0.1",
    "express-brute": "^1.0.1",
    "csurf": "^1.11.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.44",
    "date-fns": "^3.0.6",
    "lodash": "^4.17.21",
    "async": "^3.2.5",
    "p-limit": "^5.0.0",
    "p-queue": "^8.0.1",
    "debug": "^4.3.4",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "ora": "^8.0.1",
    "inquirer": "^9.2.12",
    "commander": "^11.1.0",
    "dotenv-expand": "^10.0.0",
    "config": "^3.3.11",
    "express-promise-router": "^4.1.1",
    "http-errors": "^2.0.0",
    "http-status-codes": "^2.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.11",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-security": "^2.1.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "jsdoc": "^4.0.2",
    "artillery": "^2.0.0",
    "newman": "^6.0.0",
    "@faker-js/faker": "^8.3.1",
    "cross-env": "^7.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "tests/",
      "logs/",
      "uploads/"
    ],
    "delay": "1000"
  }
}
