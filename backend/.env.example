# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV=development
APP_NAME=SQLi Demo Platform
APP_VERSION=3.0.0
APP_URL=http://localhost:4000
PORT=4000
HOST=0.0.0.0

# ============================================
# SECURITY MODE
# ============================================
# Options: 'vulnerable' or 'secure'
SECURITY_MODE=vulnerable

# Enable/Disable specific vulnerabilities
ENABLE_SQLI=true
ENABLE_XSS=true
ENABLE_CSRF=false
ENABLE_IDOR=true
ENABLE_COMMAND_INJECTION=true
ENABLE_PATH_TRAVERSAL=true
ENABLE_XXE=true
ENABLE_SSRF=true

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=sqli_user
DB_PASSWORD=your_secure_password_here
DB_NAME=sqli_demo_platform
DB_CHARSET=utf8mb4
DB_TIMEZONE=+00:00
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0
DB_WAIT_FOR_CONNECTIONS=true
DB_ENABLE_KEEP_ALIVE=true
DB_KEEP_ALIVE_INITIAL_DELAY=0

# Database SSL (for production)
DB_SSL_ENABLED=false
DB_SSL_CA_PATH=
DB_SSL_CERT_PATH=
DB_SSL_KEY_PATH=

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=sqli_demo:
REDIS_TTL=3600

# ============================================
# SESSION CONFIGURATION
# ============================================
SESSION_SECRET=change-this-to-super-secure-random-64-char-string-in-production
SESSION_NAME=sqli_demo_session
SESSION_COOKIE_MAX_AGE=86400000
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=lax
SESSION_RESAVE=false
SESSION_SAVE_UNINITIALIZED=false
SESSION_ROLLING=true

# Session store (memory, redis)
SESSION_STORE=memory

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=change-this-to-another-super-secure-random-string
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=change-this-to-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=sqli-demo-platform
JWT_AUDIENCE=sqli-demo-users

# ============================================
# AUTHENTICATION
# ============================================
# Password requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Account lockout
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Two-Factor Authentication
ENABLE_2FA=false
2FA_ISSUER=SQLi Demo Platform

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# API Rate Limiting
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=60

# Login Rate Limiting
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_REQUESTS=5

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-CSRF-Token

# ============================================
# FILE UPLOAD
# ============================================
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_MAX_FILES=10
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain
UPLOAD_DESTINATION=./uploads
UPLOAD_ENABLE_VIRUS_SCAN=false
UPLOAD_ENABLE_IMAGE_OPTIMIZATION=true

# Image processing
IMAGE_MAX_WIDTH=2000
IMAGE_MAX_HEIGHT=2000
IMAGE_QUALITY=80
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=300

# ============================================
# EMAIL CONFIGURATION
# ============================================
MAIL_ENABLED=false
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_SECURE=false
MAIL_USER=your_mail_username
MAIL_PASSWORD=your_mail_password
MAIL_FROM_NAME=SQLi Demo Platform
MAIL_FROM_EMAIL=noreply@sqli-demo.com

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_DIRECTORY=./logs
LOG_MAX_FILES=30d
LOG_MAX_SIZE=20m
LOG_COMPRESS=true

# Log to console
LOG_CONSOLE_ENABLED=true
LOG_CONSOLE_LEVEL=debug

# Log to file
LOG_FILE_ENABLED=true
LOG_FILE_LEVEL=info

# Attack logging
LOG_ATTACKS=true
LOG_ATTACK_LEVEL=warn

# Audit logging
LOG_AUDIT=true
LOG_AUDIT_LEVEL=info

# ============================================
# SECURITY HEADERS
# ============================================
HELMET_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# Content Security Policy
CSP_ENABLED=true
CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'

# ============================================
# ATTACK DETECTION
# ============================================
WAF_ENABLED=false
IDS_ENABLED=true
IDS_SENSITIVITY=medium
IDS_BLOCK_THRESHOLD=10
IDS_BLOCK_DURATION_MINUTES=60

# Honeypot
HONEYPOT_ENABLED=true

# IP Blacklist
IP_BLACKLIST_ENABLED=true
IP_BLACKLIST_CHECK_PROXIES=true

# ============================================
# ANALYTICS
# ============================================
ANALYTICS_ENABLED=true
TRACK_PAGE_VIEWS=true
TRACK_API_CALLS=true
TRACK_ERRORS=true
ANALYTICS_SAMPLE_RATE=1.0

# ============================================
# NOTIFICATIONS
# ============================================
NOTIFICATIONS_ENABLED=true
NOTIFICATION_CHANNELS=email,websocket

# Real-time notifications
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=4001

# ============================================
# WEBHOOKS
# ============================================
WEBHOOKS_ENABLED=true
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY_MS=1000
WEBHOOK_TIMEOUT_MS=30000

# ============================================
# CACHING
# ============================================
CACHE_ENABLED=true
CACHE_STORE=memory
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# ============================================
# PERFORMANCE
# ============================================
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Response time threshold (ms)
SLOW_REQUEST_THRESHOLD=3000

# ============================================
# BACKUP
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_DIRECTORY=./backups

# ============================================
# MONITORING
# ============================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Metrics
METRICS_ENABLED=true
METRICS_PATH=/metrics

# ============================================
# DOCUMENTATION
# ============================================
API_DOCS_ENABLED=true
API_DOCS_PATH=/api/docs
SWAGGER_ENABLED=true
SWAGGER_PATH=/swagger

# ============================================
# TESTING & DEVELOPMENT
# ============================================
DEBUG_ENABLED=false
VERBOSE_ERRORS=true
PRETTY_JSON=true

# Seed data
AUTO_SEED_DATABASE=false
SEED_ADMIN_USERNAME=admin
SEED_ADMIN_EMAIL=admin@sqli-demo.com
SEED_ADMIN_PASSWORD=Admin@123456

# Demo mode
DEMO_MODE=true
DEMO_RESET_INTERVAL_HOURS=24

# ============================================
# INTEGRATIONS
# ============================================
# Slack notifications
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#security-alerts

# Discord notifications
DISCORD_WEBHOOK_URL=

# GitHub integration
GITHUB_TOKEN=

# ============================================
# ADVANCED FEATURES
# ============================================
# Machine Learning
ML_ENABLED=false
ML_MODEL_PATH=./models/threat-detection.model

# Threat Intelligence
THREAT_INTEL_ENABLED=false
THREAT_INTEL_API_KEY=

# GeoIP
GEOIP_ENABLED=false
GEOIP_DATABASE_PATH=./data/GeoLite2-City.mmdb

# ============================================
# EXPERIMENTAL
# ============================================
EXPERIMENTAL_FEATURES=false
BETA_FEATURES=false

# GraphQL
GRAPHQL_ENABLED=false
GRAPHQL_PATH=/graphql

# gRPC
GRPC_ENABLED=false
GRPC_PORT=50051

# ============================================
# CUSTOM
# ============================================
# Add your custom environment variables below
CUSTOM_VAR_1=
CUSTOM_VAR_2=
